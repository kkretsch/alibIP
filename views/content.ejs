<!-- Example row of columns -->
<div class="row">
    <div class="col-md-4">
        <h2>Login</h2>
        <p>Login to your account</p>
        <form action="/u/login" method="post" id="loginform" enctype="application/x-www-form-urlencoded">
        <fieldset>
            <label for="lname">Name:</label>
            <input type="text" id="lname" name="lname" placeholder="Enter your vocab nickname" />
            <br />
            <label for="pwd">Password:</label>
            <input type="password" id="pwd" name="pwd" placeholder="" />
            <br />
            <input type="submit" class="btn btn-success" value="Login">
        </fieldset>
        </form>
    </div>
    <div class="col-md-4">
        <h2>Register</h2>
        <p>Create a new account for free.</p>
         <form action="/u/register" method="post" enctype="application/x-www-form-urlencoded">
         <fieldset>
	        <label for="name" id="nameLabel">Choose a new vocab nickname</label>
			<div class="input-group">
				<span class="input-group-addon" id="nameStatus">m.mustermann</span>
				<input type="text" class="form-control" id="name" name="name" pattern="\s{1,10}\.\s{3,20}" title="Choose a new vocab nickname (firstname.lastname)" placeholder="m.mustermann" required aria-describedby="nameLabel">
			</div>

            <label for="pwd1">Password:</label>
			<div class="input-group">
				<span class="input-group-addon" id="pwd1Status"></span>
				<input type="password" class="form-control" id="pwd1" name="pwd1" required>
			</div>

            <label for="pwd2">Repeat Password:</label>
			<div class="input-group">
				<span class="input-group-addon" id="pwd2Status"></span>
				<input type="password" class="form-control" id="pwd2" name="pwd2" required>
			</div>

			<div class="btn-group" role="group">
            	<input type="submit" class="btn btn-default" value="Register">
            </div>
         </fieldset>
      </form>
    </div>
    <div class="col-md-4">
        <h2>Heading</h2>
