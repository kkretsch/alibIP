            <br />
            <label for="pwd1">Password:</label>
            <input type="password" id="pwd1" name="pwd1" placeholder="" />
            <br />
            <label for="pwd2">Repeat Password:</label>
            <input type="password" id="pwd2" name="pwd2" placeholder="" />
