<!DOCTYPE html>
<html lang="<%= projectlang %>">
<% include ../partials/header %>
<body class="reset" id="<%= pagename %>">
    <% include ../partials/navbar %>
 
    <main class="container">
	  	<% include ../partials/flash %>

    <div class="row">
    <div class="col-md-3 block">
        <h2>Login</h2>
        <p>Login to your account</p>
         <form action="/u/reset" method="post" enctype="application/x-www-form-urlencoded" autocomplete="off">
         <input type="hidden" name="_csrf" value="<%= csrftoken %>">
         <input type="hidden" name="token" value="<%= token %>">
         <input type="hidden" name="id" value="<%= id %>">
         <fieldset>
            <label for="password">Password:</label>
			<div class="input-group">
				<span class="input-group-addon" id="pwd1Status"></span>
				<input type="password" class="form-control" id="password" name="password" required>
			</div>

            <label for="password2">Repeat Password:</label>
			<div class="input-group">
				<span class="input-group-addon" id="pwd2Status"></span>
				<input type="password" class="form-control" id="password2" name="password2" required>
			</div>

			<div class="btn-group" role="group">
            	<input type="submit" class="btn btn-default" value="Reset">
            </div>
         </fieldset>
      </form>
    </div>

   </main>

    <% include ../partials/footer %>
    
    <% include ../partials/webstats %>
    <% include ../partials/footerlibs %>
</body>
</html>